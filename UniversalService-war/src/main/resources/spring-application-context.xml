<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- ProductiveEMF -->
	<bean id="emf" class="amtc.gue.ws.books.persistence.ProductiveEMF">
	</bean>

	<!-- BookPersistenceDelegator -->
	<bean id="bookPersistenceDelegator"
		class="amtc.gue.ws.books.delegate.persist.BookPersistenceDelegator">
	</bean>
	
	<!-- TagPersistenceDelegator -->
	<bean id="tagPersistenceDelegator"
		class="amtc.gue.ws.books.delegate.persist.TagPersistenceDelegator">
	</bean>

	<!-- PersistenceDelegatorInput -->
	<bean id="persistenceDelegatorInput"
		class="amtc.gue.ws.books.delegate.persist.input.PersistenceDelegatorInput">
	</bean>

	<!-- PersistenceDelegatorOutput -->
	<bean id="persistenceDelegatorOutput"
		class="amtc.gue.ws.books.delegate.persist.output.PersistenceDelegatorOutput">
	</bean>

	<!-- BookEntityDAOImpl -->
	<bean id="bookDAOImpl" class="amtc.gue.ws.books.persistence.dao.book.impl.BookDAOImpl">
		<!-- emf instance used as constructor input -->
		<constructor-arg>
			<ref bean="emf" />
		</constructor-arg>
	</bean>

	<!-- TagDAOImpl -->
	<bean id="tagDAOImpl" class="amtc.gue.ws.books.persistence.dao.tag.impl.TagDAOImpl">
		<!-- emf instance used as constructor input -->
		<constructor-arg>
			<ref bean="emf" />
		</constructor-arg>
	</bean>
	
	<!-- DAOs -->
	<bean id="daos" class="amtc.gue.ws.books.persistence.dao.DAOs">
	    <property name="bookDAO" ref="bookDAOImpl"></property>
	    <property name="tagDAO" ref="tagDAOImpl"></property>
	</bean>

</beans>