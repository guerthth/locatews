<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- ProductiveEMF -->
	<bean id="emf" class="amtc.gue.ws.base.persistence.ProductiveEMF">
	</bean>

	<!-- User -->
	<bean id="user" class="amtc.gue.ws.base.inout.User"></bean>

	<!-- BookPersistenceDelegator -->
	<bean id="bookPersistenceDelegator"
		class="amtc.gue.ws.books.delegate.persist.BookPersistenceDelegator">
		<property name="currentUser" ref="user"></property>
	</bean>

	<!-- TagPersistenceDelegator -->
	<bean id="tagPersistenceDelegator"
		class="amtc.gue.ws.books.delegate.persist.TagPersistenceDelegator">
	</bean>

	<!-- PlayerPersistenceDelegator -->
	<bean id="playerPersistenceDelegator"
		class="amtc.gue.ws.tournament.delegate.persist.PlayerPersistenceDelegator">
	</bean>

	<!-- UserPersistenceDelegator -->
	<bean id="userPersistenceDelegator"
		class="amtc.gue.ws.base.delegate.persist.UserPersistenceDelegator">
	</bean>

	<!-- PersistenceDelegatorInput -->
	<bean id="persistenceDelegatorInput"
		class="amtc.gue.ws.base.delegate.persist.input.PersistenceDelegatorInput">
	</bean>

	<!-- PersistenceDelegatorOutput -->
	<bean id="persistenceDelegatorOutput"
		class="amtc.gue.ws.base.delegate.persist.output.PersistenceDelegatorOutput">
	</bean>

	<!-- BookEntityDAOImpl -->
	<bean id="bookDAOImpl" class="amtc.gue.ws.books.persistence.dao.book.impl.BookDAOImpl">
		<!-- emf instance used as constructor input -->
		<constructor-arg>
			<ref bean="emf" />
		</constructor-arg>
		<constructor-arg>
			<ref bean="user" />
		</constructor-arg>
	</bean>

	<!-- TagDAOImpl -->
	<bean id="tagDAOImpl" class="amtc.gue.ws.books.persistence.dao.tag.impl.TagDAOImpl">
		<!-- emf instance used as constructor input -->
		<constructor-arg>
			<ref bean="emf" />
		</constructor-arg>
	</bean>

	<!-- PlayerDAOImpl -->
	<bean id="playerDAOImpl"
		class="amtc.gue.ws.tournament.persistence.dao.player.impl.PlayerDAOImpl">
		<!-- emf instance used as constructor input -->
		<constructor-arg>
			<ref bean="emf" />
		</constructor-arg>
	</bean>

	<!-- UserDAOImpl -->
	<bean id="userDAOImpl" class="amtc.gue.ws.base.persistence.dao.user.impl.UserDAOImpl">
		<!-- emf instance used as constructor input -->
		<constructor-arg>
			<ref bean="emf" />
		</constructor-arg>
	</bean>

	<!-- RoleDAOImpl -->
	<bean id="roleDAOImpl" class="amtc.gue.ws.base.persistence.dao.role.impl.RoleDAOImpl">
		<!-- emf instance used as constructor input -->
		<constructor-arg>
			<ref bean="emf" />
		</constructor-arg>
	</bean>
</beans>